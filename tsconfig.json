{
  "compilerOptions": {
		"strict": true,
    "module": "commonjs",
		"allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
		"pretty": true,
		"baseUrl": "./src",
		"paths": {
		   "*": [ "types/*", "*" ]
		},
		"typeRoots": [
		  "node_modules/@types",
		  "./src/types"
		]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "src/types.ts"
  ],
  "compileOnSave": true
}